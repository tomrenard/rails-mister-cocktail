<div class="container">
  <h1> All cocktails <%= link_to 'Add a new cocktail', new_cocktail_path, class: "btn btn-primary" %> </h1>
  <br>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card">
          <div class="card-description">
              <h2>Name: <%= link_to cocktail.name%> </h2>
          </div>
          <%=link_to "", cocktail_path(cocktail), class:"card-link" %>
        </div>
      </div>
    <% end %>
  </div>

</div>
<br>
